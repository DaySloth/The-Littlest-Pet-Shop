<div class="container">
    <form class="basic-form" id="forgotPasswordForm">
        <h3>Reset Password</h3>
        <hr>
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show animate__animated animate__flash animate__delay-1s animate__faster" role="alert">
            {{error}} Please <a href="/register">register</a> for an account
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}
        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
        </div>
        <button type="submit" class="btn btn-primary" id="login-btn">Reset password</button>
        <div class="form-footer-links">
            <p><a href="/login">Return to login</a></p>
        </div>
    </form>
</div>