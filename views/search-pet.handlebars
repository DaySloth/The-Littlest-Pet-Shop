<div>
    <h2>Search Pet Page</h2>
</div>

<div class="container">
    <div class="row">
        {{#each pet}}
        <div class="card" style="width: 18rem;">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <ul class="card-text">
                    <li>Species: {{species}}</li>
                    <li>Age: {{age}}</li>
                    <li>Gender: {{gender}}</li>
                </ul>
                <a href={{url}} class="btn btn-primary">View Pet</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>